{{ form_start(form) }}
<div class="row">
	<div class="d-flex my-3">
		<div class="col-md-3"></div>
		<div class="">
			<button class="btn back fs-5">
				<i class="bi bi-plus-circle me-2"></i>
				{{ button_label|default('Ajouter') }}</button>
		</div>
	</div>
	<div class="d-flex justify-content-center">
		<div class="shadow bg-secondary rounded mb-5 col-md-6 col-10 p-3">
			<div class="d-flex flex-column fs-5">
				{{ form_row (form.pseudo, {'attr':{'class':'form-control border-dark mb-3'}})}}
				{{ form_row (form.avatarFile, {'attr':{'class':'form-control border-dark mb-4'}})}}
			</div>
		</div>
	</div>
</div>
{{ form_end(form) }}
