{% extends 'layout.html.twig' %}

{% block title %}
	{{ card.name }}
{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags('card') }}
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-2 p-0 bg-primary">
				<nav id="sidebar" class="d-flex flex-column sticky-md-top ">
					<div class="d-flex justify-content-center w-100 mt-4">
						<div class="d-flex justify-content-center avatar border border-dark border-2 rounded overflow-hidden p-2">
							<img src="{{vich_uploader_asset(user, 'avatarFile') }}" alt="Mon avatar" class="">
						</div>
					</div>
					<h2 class="d-flex justify-content-center mt-2 pseudo">{{ user.pseudo }}</h2>
					<div class="d-none d-md-block">
						<p class="d-flex justify-content-center fs-4 mt-3 mb-0">{{ user.firstname }}</p>
						<p class="d-flex justify-content-center fs-5">{{ user.lastname }}</p>
					</div>
					<a href="{{ path('user_edit') }}" class="d-flex justify-content-center fs-5 fw-bold text-decoration-none ms-2 mb-2 edit">Modifier mon profil<i class="bi bi-pencil-square ms-2"></i>
					</a>
					<div class="d-md-flex justify-content-md-center d-none mb-md-5">
						<a href="{{ path('card') }}" class="btn btn-outline-dark text-light fs-5 fw-bold"><i class="bi bi-box-arrow-left me-2"></i>Retour</a>
					</div>
				</nav>
			</div>
			<div data-bs-spy="scroll" data-bs-target="#sidebar" data-bs-offset="0" data-bs-smooth-scroll="true" class="col-md-10" tabindex="0">
				<h1 class="d-flex justify-content-center my-5 text-light">Carte
					{{ card.name }}
					de la collection de
					{{ user.pseudo }}</h1>
				<div class="d-flex justify-content-around">
					<div class="mb-5 col-md-4 col-10 overflow-hidden jace">
						{% if card.image is empty %}
							<img src="{{ asset('build/images/jace.jpg') }}" alt="Image de Jace" class="">
						{% else %}
							<img src="{{ card.image }}" alt="Image de Jace" class="img">
						{% endif %}
					</div>
					<div class="d-flex flex-column justify-content-between shadow bg-primary rounded mb-5 col-md-4 col-10 p-3">
						<div class="d-flex justify-content-between">
							<div class="ms-2 fs-3 fw-bold text-light font">{{ card.name }}</div>
							<div class="me-2 fs-4">{{ card.manaCost }}</div>
						</div>
						<div class="">
							<div class="fs-3 fw-bold text-light font">Raret√©</div>
							<div class="fs-5 ">{{ card.rarity }}</div>
						</div>
						<div class="">
							<div class="fs-3 fw-bold text-light font">Type</div>
							<div class="fs-5 ">{{ card.type }}</div>
						</div>
						<div class="">
							<div class="fs-3 fw-bold text-light font">Description</div>
							<div class="fs-5">{{ card.description }}</div>
						</div>
						<div class="d-flex justify-content-end align-items-center">
							{% if card.power is empty %}
								<div class="d-flex align-items-center">
									<div></div>
									<div></div>
								</div>
							{% else %}
								<div class="d-flex align-items-center">
									<div class="fs-5 me-2">Puissance</div>
									<div class="fs-4 fw-bold text-light">{{ card.power }}</div>
								</div>
								<div class="mx-2 fs-5">/</div>
							{% endif %}
							{% if card.toughness is empty %}
								<div class="d-flex align-items-center">
									<div></div>
									<div></div>
								</div>
							{% else %}
								<div class="d-flex align-items-center">
									<div class="fs-5 me-2">Endurance</div>
									<div class="fs-4 fw-bold text-light">{{ card.toughness }}</div>
								</div>
							{% endif %}
						</div>
					</div>
				</div>
				<div class="d-flex justify-content-end mb-5">
					{{ include('card/_delete_form.html.twig') }}
					<div class="col-md-1"></div>
				</div>
			</div>
		</div>
	</div>
</div>{% endblock %}
