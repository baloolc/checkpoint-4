{% extends 'layout.html.twig' %}

{% block title %}Contact équipe magic the gathering
{% endblock %}

{% block body %}
	<h1 class="d-flex justify-content-center mt-5 mb-5 p-4 p-md-0 text-light">Contacter l'équipe de Magic The Gathering</h1>
	{{ form_start(form) }}
	<div class="row m-0">
		<div class="container-md shadow bg-secondary rounded mb-5 col-md-8 col-10">
			<div class="row m-0">
				<div class="d-md-flex justify-content-lg-around align-items-center mt-3">
					<div class="mt-2 fs-5 col-md-5">
						{{ form_row (form.firstname, {'attr':{'class':'form-control border-dark'}})}}
					</div>
					<div class="mt-2 fs-5 col-md-5">
						{{ form_row (form.lastname, {'attr':{'class':'form-control border-dark'}})}}
					</div>
				</div>
				<div class="d-flex justify-content-center">
					<div class="mt-2 fs-5 col-md-11">
						{{ form_row (form.email, {'attr':{'class':'form-control border-dark'}})}}
					</div>
				</div>
				<div class="d-flex justify-content-center">
					<div class="mt-2 fs-5 col-md-11">
						{{ form_row (form.message, {'attr':{'class':'form-control border-dark'}})}}
					</div>
				</div>
			</div>
			<div class="d-flex justify-content-center">
				<button class="btn btn-outline-primary text-dark mt-4 mb-4 fs-5 border-2 fw-bold">
					<i class="bi bi-send-fill me-2"></i>
					{{ button_label|default('Envoyer') }}</button>
			</div>
		</div>
	</div>
    {{ form_end(form) }}
{% endblock %}
